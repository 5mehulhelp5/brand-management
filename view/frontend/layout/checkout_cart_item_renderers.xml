<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.item.renderers.default">
            <block class="MageSuite\BrandManagement\Block\Checkout\Cart\Item\Renderer\Brand" name="checkout.cart.item.brand" template="MageSuite_BrandManagement::product/brand.phtml">
                <arguments>
                    <argument xsi:type="string" name="wrapper_tag">div</argument>
                    <argument xsi:type="string" name="wrapper_css_class">cs-product-cart__brand</argument>
                    <argument xsi:type="string" name="text_css_class">cs-product-cart__brand-text</argument>
                </arguments>
                <visibilityCondition name="is_brand_visible" className="MageSuite\BrandManagement\Model\Condition\IsBrandVisible">
                    <arguments>
                        <argument xsi:type="const" name="context">MageSuite\BrandManagement\Helper\Configuration::BRAND_VISIBILITY_CART</argument>
                    </arguments>
                </visibilityCondition>
            </block>
        </referenceBlock>
        <referenceBlock name="checkout.cart.item.renderers.simple">
            <block class="MageSuite\BrandManagement\Block\Checkout\Cart\Item\Renderer\Brand" name="checkout.cart.item.brand" template="MageSuite_BrandManagement::product/brand.phtml">
                <arguments>
                    <argument xsi:type="string" name="wrapper_tag">div</argument>
                    <argument xsi:type="string" name="wrapper_css_class">cs-product-cart__brand</argument>
                    <argument xsi:type="string" name="text_css_class">cs-product-cart__brand-text</argument>
                </arguments>
                <visibilityCondition name="is_brand_visible" className="MageSuite\BrandManagement\Model\Condition\IsBrandVisible">
                    <arguments>
                        <argument xsi:type="const" name="context">MageSuite\BrandManagement\Helper\Configuration::BRAND_VISIBILITY_CART</argument>
                    </arguments>
                </visibilityCondition>
            </block>
        </referenceBlock>
    </body>
</page>
