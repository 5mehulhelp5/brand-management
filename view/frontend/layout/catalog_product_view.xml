<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main.section.essentials">
            <block class="Magento\Catalog\Block\Product\View\Description" name="product.view.brand" template="MageSuite_BrandManagement::product/brand.phtml" before="-">
                <arguments>
                    <argument xsi:type="string" name="wrapper_tag">div</argument>
                    <argument xsi:type="string" name="wrapper_css_class">cs-buybox__brand</argument>
                    <argument xsi:type="string" name="text_css_class">cs-buybox__brand-text</argument>
                    <argument xsi:type="boolean" name="display_brand_image">false</argument>
                    <argument xsi:type="const" name="location">MageSuite\BrandManagement\Helper\Configuration::BRAND_VISIBILITY_PDP</argument>
                    <argument name="view_model" xsi:type="object">MageSuite\BrandManagement\ViewModel\BrandRenderer</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
