<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main.section.essentials">
            <block class="Magento\Catalog\Block\Product\View\Description" name="product.view.brand" template="MageSuite_BrandManagement::product/brand.phtml" after="page.main.title">
                <arguments>
                    <argument xsi:type="string" name="wrapper_tag">div</argument>
                    <argument xsi:type="string" name="wrapper_css_class">cs-product-view__brand</argument>
                    <argument xsi:type="string" name="text_css_class">cs-product-view__brand-text</argument>
                </arguments>
                <visibilityCondition name="is_brand_visible" className="MageSuite\BrandManagement\Model\Condition\IsBrandVisible">
                    <arguments>
                        <argument xsi:type="const" name="context">MageSuite\BrandManagement\Helper\Configuration::BRAND_VISIBILITY_PDP</argument>
                    </arguments>
                </visibilityCondition>
            </block>
        </referenceContainer>
    </body>
</page>
